<brls:AppletFrame
        iconInterpolation="linear"
        backgroundColor="@theme/brls/background"
        headerHidden="true"
        footerHidden="true">
    <brls:Box
            width="100%"
            height="100%">
        <GalleryView
                wireframe="false"
                width="100%"
                height="95%"
                paddingLeft="100"
                paddingRight="100"
                hideHighlight="true"
                id="hint/gallery"/>
        <brls:Label
                positionType="absolute"
                positionBottom="10"
                positionRight="10"
                fontSize="12"
                textColor="@theme/font/grey"
                text="@i18n/wiliwili/hints/hint_right"/>
    </brls:Box>
</brls:AppletFrame>
