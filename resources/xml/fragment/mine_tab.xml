<brls:Box
        width="auto"
        axis="column"
        marginLeft="8"
        alignItems="stretch">

    <brls:Box
            id="user_home/goto_userspace"
            height="100"
            backgroundColor="@theme/color/grey_1"
            focusable="true"
            hideHighlightBackground="true"
            cornerRadius="6"
            marginTop="28"
            marginRight="40"
            marginLeft="20">
        <brls:Image
                id="mine/image/avatar"
                cornerRadius="60"
                margin="10"
                image="@res/pictures/default_avatar.png"/>
        <brls:Box
                marginLeft="10"
                axis="column"
                width="35%">
            <brls:Label
                    marginTop="20"
                    id="mine/label/username"
                    grow="1"
                    text="@i18n/wiliwili/mine/login/check"/>
            <brls:Label
                    id="mine/label/sign"
                    marginBottom="10"
                    grow="1"
                    singleLine="true"
                    fontSize="16"
                    textColor="@theme/font/grey"
                    text=""/>
        </brls:Box>
        <brls:Box
                marginRight="10"
                alignItems="center"
                grow="1">
            <brls:Box
                    wireframe="false"
                    grow="1"
                    alignItems="center"
                    justifyContent="center"
                    axis="column">
                <brls:Label
                        id="mine/label/dynamic"
                        fontSize="@style/wiliwili/mine/num"
                        marginTop="20"
                        text="0"/>
                <brls:Label
                        singleLine="true"
                        marginTop="4"
                        fontSize="@style/wiliwili/mine/type"
                        textColor="@theme/font/grey"
                        text="@i18n/wiliwili/mine/activity"/>
            </brls:Box>
            <brls:Rectangle
                    marginTop="10"
                    marginLeft="20"
                    marginRight="20"
                    height="20"
                    width="1"
                    color="@theme/color/line"/>
            <brls:Box
                    wireframe="false"
                    grow="1"
                    alignItems="center"
                    justifyContent="center"
                    axis="column">
                <brls:Label
                        id="mine/label/following"
                        fontSize="@style/wiliwili/mine/num"
                        marginTop="20"
                        text="0"/>
                <brls:Label
                        singleLine="true"
                        marginTop="4"
                        fontSize="@style/wiliwili/mine/type"
                        textColor="@theme/font/grey"
                        text="@i18n/wiliwili/mine/following"/>
            </brls:Box>
            <brls:Rectangle
                    marginTop="10"
                    marginLeft="20"
                    marginRight="20"
                    height="20"
                    width="1"
                    color="@theme/color/line"/>
            <brls:Box
                    wireframe="false"
                    grow="1"
                    alignItems="center"
                    justifyContent="center"
                    axis="column">
                <brls:Label
                        id="mine/label/follower"
                        fontSize="@style/wiliwili/mine/num"
                        marginTop="20"
                        text="0"/>
                <brls:Label
                        singleLine="true"
                        marginTop="4"
                        fontSize="@style/wiliwili/mine/type"
                        textColor="@theme/font/grey"
                        text="@i18n/wiliwili/mine/follower"/>
            </brls:Box>
            <brls:Rectangle
                    marginTop="10"
                    marginLeft="20"
                    marginRight="20"
                    height="20"
                    width="1"
                    color="@theme/color/line"/>
            <brls:Box
                    wireframe="false"
                    alignItems="center"
                    justifyContent="center"
                    grow="1"
                    axis="column">
                <brls:Label
                        id="mine/label/coins"
                        fontSize="@style/wiliwili/mine/num"
                        marginTop="20"
                        text="0"/>
                <brls:Label
                        singleLine="true"
                        marginTop="4"
                        fontSize="@style/wiliwili/mine/type"
                        textColor="@theme/font/grey"
                        text="@i18n/wiliwili/mine/coin"/>
            </brls:Box>
        </brls:Box>
    </brls:Box>

    <AutoTabFrame
            id="mine/tab/frame"
            grow="1"
            marginBottom="8"
            defaultTab="0"
            tabHeight="65"
            tabFontSize="16"
            tabItemActiveTextColor="@theme/color/bilibili"
            sidebarPosition="top">

        <Tab label="@i18n/wiliwili/mine/history"
             fontSize="18">
            <MineHistory id="mine/history"/>
        </Tab>

        <Tab label="@i18n/wiliwili/mine/collection"
             fontSize="18">
            <MineCollection
                    id="mine/collection"
                    type="1"/>
        </Tab>

        <Tab label="@i18n/wiliwili/mine/subscription"
             fontSize="18">
            <MineCollection
                    id="mine/subscription"
                    type="2"/>
        </Tab>

        <Tab label="@i18n/wiliwili/mine/anime"
             fontSize="18">
            <MineBangumi
                    id="mine/anime"
                    type="1"/>
        </Tab>

        <Tab label="@i18n/wiliwili/mine/series"
             fontSize="18">
            <MineBangumi
                    id="mine/series"
                    type="2"/>
        </Tab>

        <Tab label="@i18n/wiliwili/mine/later"
             fontSize="18">
            <MineLater id="mine/later"/>
        </Tab>

    </AutoTabFrame>
</brls:Box>