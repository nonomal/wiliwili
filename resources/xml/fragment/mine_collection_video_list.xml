<brls:Box
        wireframe="false"
        axis="column"
        width="auto"
        height="auto">
    <brls:AppletFrame
            id="collection/appletFrame"
            iconInterpolation="linear"
            headerHidden="true"
            footerHidden="false"
            grow="1">
        <brls:Box
                axis="column"
                marginLeft="10"
                marginTop="16"
                grow="1">
            <brls:Box
                    marginTop="8"
                    marginLeft="20"
                    marginBottom="16"
                    height="100">
                <brls:Image
                        scalingType="fill"
                        id="collection/cover"
                        image="@res/pictures/video-card-bg.png"
                        backgroundColor="@theme/color/grey_1"
                        cornerRadius="4"
                        height="100"
                        width="178"
                        focusable="true"/>
                <brls:Box
                        marginLeft="20"
                        marginTop="20"
                        height="100"
                        grow="1"
                        axis="column">
                    <TextBox
                            marginBottom="0"
                            id="collection/label/title"
                            fontSize="30"
                            lineHeight="1.5"
                            width="100%"
                            height="45"/>
                    <brls:Label
                            id="collection/label/subtitle"
                            fontSize="16"
                            singleLine="true"
                            textColor="@theme/font/grey"
                            width="100%"/>
                </brls:Box>
            </brls:Box>

            <RecyclingGrid
                    paddingLeft="20"
                    paddingRight="10"
                    marginBottom="8"
                    itemHeight="250"
                    grow="1"
                    preFetchLine="1"
                    spanCount="@style/wiliwili/grid/span/4"
                    wireframe="false"
                    id="collection/recyclingGrid"/>

            <ButtonClose
                    positionType="absolute"
                    positionTop="-6"
                    positionRight="10"/>
        </brls:Box>
    </brls:AppletFrame>
</brls:Box>