<brls:Box
        axis="column"
        marginTop="20"
        marginBottom="20"
        width="auto"
        height="500">

    <ButtonClose
            positionType="absolute"
            positionTop="-16"
            positionRight="4"/>

    <brls:Box
            marginLeft="20"
            marginRight="20"
            width="400"
            alignItems="center">
        <UserInfoView
                height="60"
                id="latest/author"/>
    </brls:Box>


    <brls:Rectangle
            marginLeft="24"
            marginRight="24"
            marginTop="4"
            marginBottom="4"
            width="auto"
            height="1"
            color="@theme/color/line"/>

    <brls:ScrollingFrame
            width="auto"
            height="auto"
            focusable="true"
            grow="1.0">

        <brls:Box
                width="auto"
                height="auto"
                minHeight="500"
                axis="column"
                paddingLeft="40"
                paddingRight="40"
                paddingTop="10"
                paddingBottom="10">

            <brls:Label
                    id="latest/header"
                    width="auto"
                    height="auto"
                    fontSize="36"
                    marginTop="10"
                    marginBottom="20"/>

            <brls:Label
                    id="latest/subtitle"
                    width="auto"
                    height="auto"
                    textColor="@theme/font/grey"
                    marginBottom="10"/>
            <brls:Box
                    id="latest/top"
                    marginBottom="30"/>

            <brls:Box
                    axis="column"
                    id="latest/textbox"/>

            <QRImage
                    marginTop="30"
                    width="200"
                    height="200"
                    alignSelf="center"
                    QRContent="https://github.com/xfangfang/wiliwili/releases"/>

            <brls:Label
                    width="auto"
                    height="auto"
                    textColor="@theme/font/grey"
                    text="https://github.com/xfangfang/wiliwili/releases"
                    horizontalAlign="center"
                    marginTop="20"
                    marginBottom="30"/>

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>