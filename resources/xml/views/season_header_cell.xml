<brls:Box
        width="auto"
        height="@style/brls/sidebar/item_height"
        focusable="true"
        paddingTop="12.5"
        paddingBottom="12.5"
        lineColor="@theme/brls/sidebar/separator"
        alignItems="center">

    <brls:Rectangle
            width="@style/brls/header/rectangle_width"
            height="100%"
            color="@theme/color/bilibili"
            marginLeft="4"
            marginRight="@style/brls/header/rectangle_margin"/>

    <brls:Label
            marginRight="@style/brls/listitem/descriptionIndent"
            id="player/tab/title"
            width="auto"
            height="auto"
            textColor="@theme/color/bilibili"
            fontSize="@style/brls/sidebar/item_font_size"/>

</brls:Box>