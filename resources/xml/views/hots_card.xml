<brls:Box
        axis="row"
        width="auto"
        height="auto"
        alignItems="center"
        wireframe="false">
    <brls:Label
            id="hots/order"
            width="50"
            lineColor="#D0D0D0"
            lineRight="0"
            wireframe="false"
            height="50"
            horizontalAlign="center"/>
    <brls:Label
            id="hots/content"
            wireframe="false"
            width="auto"
            marginRight="4"
            height="50"/>
    <brls:Image
            id="hots/icon"
            wireframe="false"
            height="20"
            shrink="0"
            scalingType="fit"/>
</brls:Box>
