<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="row"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            width="40%"
            height="100%">
        <brls:Image
                id="video/card/picture"
                scalingType="fill"
                height="100%"
                width="40%"
                image="@res/pictures/video-card-bg.png"
                cornerRadius="4"/>

        <brls:Box
                id="video/card/badge/boxTop"
                backgroundColor="#FF0000"
                positionType="absolute"
                cornerRadius="4"
                padding="4"
                positionTop="8"
                positionRight="8">
            <brls:Label
                    id="video/card/badge/top"
                    textColor="#FFFFFF"
                    fontSize="16"
                    height="16"
                    horizontalAlign="center"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            grow="1"
            wireframe="false"
            marginTop="10"
            marginLeft="8"
            marginRight="4"
            axis="column">
        <TextBox
                marginBottom="0"
                id="video/card/label/title"
                fontSize="18"
                lineHeight="1.5"
                maxRows="2"
                wireframe="false"
                width="100%"
                height="53"/>
        <brls:Box
                wireframe="false"
                grow="1"
                width="100%"
                height="20"
                marginLeft="2"
                alignItems="center">
            <brls:Label
                    id="video/card/label/username"
                    fontSize="16"
                    singleLine="true"
                    wireframe="false"
                    textColor="@theme/font/grey"/>
        </brls:Box>
        <brls:Box
                alignItems="center"
                height="20"
                wireframe="false">
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-video-play-count-grey.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="@theme/font/grey"
                    id="video/card/label/count"
                    fontSize="14"/>
            <SVGImage
                    width="15"
                    height="15"
                    SVG="@res/svg/widget-bookmark.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="@theme/font/grey"
                    id="video/card/label/like"
                    fontSize="14"/>
        </brls:Box>
    </brls:Box>
</brls:Box>