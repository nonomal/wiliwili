<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            width="100%"
            height="60%">
        <brls:Image
                id="video/card/picture"
                scalingType="fill"
                height="100%"
                width="100%"
                image="@res/pictures/video-card-bg.png"
                cornerRadius="4"/>

        <brls:Box
                id="video/card/badgeBox"
                positionType="absolute"
                positionTop="8"
                positionRight="0"
                marginRight="8"
                cornerRadius="4"
                padding="4"
                backgroundColor="#303030A0">
            <brls:Label
                    id="video/card/label/badge/right/top"
                    textColor="#FFFFFF"
                    fontSize="16"
                    height="16"
                    horizontalAlign="center"/>
        </brls:Box>

        <brls:Box
                positionBottom="0"
                positionType="absolute"
                background="vertical_linear"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%"
                alignItems="center">
            <SVGImage
                    id="video/card/deviceType"
                    width="18"
                    height="18"
                    SVG="@res/svg/widget-video-play-count.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="#FFFFFF"
                    id="video/card/label/count"
                    fontSize="16"
                    text=""/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="0"
                    textColor="#FFFFFF"
                    fontSize="16"
                    text="时长：13:14"/>
        </brls:Box>


        <brls:Box
                wireframe="false"
                positionType="absolute"
                positionBottom="0"
                width="100%"
                height="2"
                backgroundColor="#353535">
            <brls:Rectangle
                    id="video/card/progress"
                    height="2"
                    width="50%"
                    color="@theme/color/bilibili"/>
        </brls:Box>
    </brls:Box>
    <brls:Box
            margin="10"
            axis="column">
        <TextBox
                marginBottom="0"
                wireframe="false"
                id="video/card/label/title"
                fontSize="20"
                lineHeight="1.5"
                maxRows="2"
                width="100%"
                height="60"/>
        <brls:Box
                grow="1"
                width="100%"
                alignItems="center">
            <SVGImage
                    id="video/card/up"
                    height="14"
                    SVG="@res/svg/widget-up.svg"/>
            <brls:Label
                    id="video/card/label/username"
                    marginLeft="4"
                    fontSize="16"
                    singleLine="true"
                    textColor="@theme/font/grey"
                    height="100%"/>
        </brls:Box>
    </brls:Box>
</brls:Box>