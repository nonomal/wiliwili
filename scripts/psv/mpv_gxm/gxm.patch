+static int init(struct ra_hwdec *hw) {
+    struct priv_owner *priv = hw->priv;
+
+    // TODO: gc_count should be >= `display buffer count` of user's application
+    priv->gc_count = 3;
+    priv->gc_index = 0;
+    priv->gc_list = talloc_zero_array(NULL, struct mp_image*, priv->gc_count);
